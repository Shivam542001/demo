<div class="container border shadow mx-auto p-4 my-3" style="width:25rem;">
<h1>Edit Product</h1>
<div class="row">

<%= form_with model: @product do |form| %>
  <div class="form-group">
    <%= form.label :name, class: "control-label" %><br>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "control-label" %><br>
    <%= form.text_area :description, class: "form-control" %><br>
  </div>

  <div class="form-group">
    <%= form.label :category, class: "control-label" %><br>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price, class: "control-label" %><br>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= form.label :quantity, class: "control-label" %><br>
  <%= form.number_field :quantity, class: "form-control" %>
  </div>

  <div class="form-group ">
  <%= form.label :image %><br>
  <%= form.file_field :image, class: "my-2"  %>
  </div>

  <div class="form-group">
    <%= form.submit "sumbit", class: 'btn btn-primary' %>
  </div>
<% end %>


</div>
</div>
