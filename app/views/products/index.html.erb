<% if false %>
  <ul>
  <% @products.each do |product| %>
    <li>
    <%= link_to product.name, product_path(product) %>
    </li>
  <% end %>
  </ul>




  <br>
  <strong>categories</strong>
  <% @categories.each do |category| %>
    <br>
    <%= link_to category, product_category_path(category: category) %>
  <%end%>


  <div class="row row-cols-1 row-cols-md-3 g-4">
  <% @products.each do |product| %>
    <div class="col">
    <div class="card text-center" style="width: 18rem;height: 25rem;">

      <% if product.image.attached? %>  
        <img src=<%=rails_blob_url(product.image)%>, class="card-img-top", style="width: 18rem;height: 18rem;">
      <%else%>
        <%= image_tag "default.jpg", class: "card-img-top", style: "width: 18rem;height: 18rem;" %>
      <%end%> 

      <div class="card-body">

        <h5 class="card-title"> <%=product.name%> </h5>

        <%= link_to "View More", product_path(product), class: "btn btn-primary" %>

      </div>
    </div>
    </div>
  <%end%>
  </div>
<%end%>


<%= render "products/products" %>
