<% if flash.any? %>
  <% flash.each do |type, msg| %>
  <div style="color:red"><%= msg %></div>
  <% end %>
<% end %>

<section class="h-100 h-custom .bg-light" >
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-8">
                <div class="p-5">
                  <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-bold mb-0 text-black">Ordered On: <%=@order.order_on%></h3>
                  </div>
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <p class="mb-0 text-black">Name: <%= @order.name %></p>
                  </div>
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <p class="mb-0 text-black">Address: <%= @order.address %></p>
                  </div>
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <p class="mb-0 text-black">Phone: <%= @order.phone %></p>
                  </div>

                  <% @order.order_items.each do |order_item| %>


                    <hr class="my-4">

                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                      <div class="col-md-2 col-lg-2 col-xl-2">

                        <% if order_item.product.image.attached? %>
                          <%= image_tag order_item.product.image, class:"img-fluid rounded-3", alt:"Cotton T-shirt" %>
                        <%else%>
                          <%= image_tag "default.jpg", class: "img-fluid rounded-3", alt:"Default image" %>
                        <%end%>

                      </div>
                      <div class="col-md-3 col-lg-3 col-xl-3">
                        <h6 class="text-muted"><%=order_item.product.category%></h6>
                        <h6 class="text-black mb-0"><%=order_item.product.name%></h6>
                      </div>


                      
                      <div class="col-md-3 col-lg-3 col-xl-2 d-flex">

                        <div class="m-auto">
                        <%=order_item.quantity%>
                        </div>

                      </div>
                      
                      <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                        <a href="#!" class="text-muted"><i class="fas fa-times"></i></a>
                      </div>
                    </div>
                  <%end%>

                  <hr class="my-4">

                  <div class="pt-5">
                    <h6 class="mb-0">
                      <%= link_to "Back to shop", root_path, class: "text-body fas fa-long-arrow-alt-left me-2" %>                          
                    </h6>      
                  </div>
                </div>
              </div>
              <div class="col-lg-4 bg-grey">
                <div class="p-5">
                  <h3 class="fw-bold mb-5 mt-2 pt-1">Summary</h3>
                  <hr class="my-4">

                  <div class="d-flex justify-content-between mb-4">
                    <h5 class="text-uppercase">Items <%=@order.order_items.count%></h5>
                  </div>
                  <hr class="my-4">

                  <div class="d-flex justify-content-between mb-5">
                    <h5 class="text-uppercase">Total price</h5>
                    <h5><%=@order.order_amount%></h5>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
